import pandas as pd
import qrcode
from openpyxl import load_workbook
from openpyxl.drawing.image import Image as ExcelImage
from openpyxl.utils import get_column_letter
import io
import os

def embed_qr_codes_in_excel(excel_file_path, link_column_name):
    """
    Robust function to generate QR codes and embed them directly in Excel
    """
    
    try:
        print("ğŸ” Step 1: Checking file...")
        # Check if file exists
        if not os.path.exists(excel_file_path):
            print(f"âŒ Error: File '{excel_file_path}' not found!")
            return False
        
        print("ğŸ“– Step 2: Reading Excel file...")
        # Read the Excel file
        df = pd.read_excel(excel_file_path)
        print(f"âœ… Found {len(df)} rows of data")
        print(f"ğŸ“‹ Available columns: {list(df.columns)}")
        
        print("ğŸ” Step 3: Checking column name...")
        # Check if the link column exists
        if link_column_name not in df.columns:
            print(f"âŒ Error: Column '{link_column_name}' not found!")
            print(f"ğŸ’¡ Available columns are: {list(df.columns)}")
            print("ğŸ’¡ Please check the exact spelling and case of your column name")
            return False
        
        print("ğŸ“‚ Step 4: Creating backup and loading workbook...")
        # Create backup
        backup_file = excel_file_path.replace('.xlsx', '_backup.xlsx')
        df.to_excel(backup_file, index=False)
        print(f"âœ… Backup created: {backup_file}")
        
        # Load workbook
        wb = load_workbook(excel_file_path)
        ws = wb.active
        
        print("ğŸ¯ Step 5: Setting up columns...")
        # Get column positions using openpyxl's built-in function
        headers = list(df.columns)
        link_col_index = headers.index(link_column_name) + 1  # 1-based for Excel
        link_col_letter = get_column_letter(link_col_index)
        
        # Find an empty column for QR codes
        qr_col_index = len(headers) + 1  # 1-based for Excel
        qr_col_letter = get_column_letter(qr_col_index)
        
        print(f"ğŸ”— Links in column {link_col_letter} (index {link_col_index})")
        print(f"ğŸ“± QR codes will go in column {qr_col_letter} (index {qr_col_index})")
        
        # Add QR Code header
        ws[f'{qr_col_letter}1'] = 'QR_Code'
        
        print("âš¡ Step 6: Processing rows...")
        successful_qrs = 0
        
        # Process each row
        for index, row in df.iterrows():
            excel_row = index + 2  # Excel row (1-indexed + header)
            website_link = row[link_column_name]
            
            # Skip empty/invalid links
            if pd.isna(website_link) or str(website_link).strip() == '' or str(website_link).lower() == 'nan':
                print(f"  â­ï¸  Row {excel_row}: Skipping (empty link)")
                continue
            
            try:
                website_link = str(website_link).strip()
                print(f"  ğŸ”„ Row {excel_row}: Processing {website_link[:50]}...")
                
                # Generate QR code
                qr = qrcode.QRCode(
                    version=1,
                    error_correction=qrcode.constants.ERROR_CORRECT_L,
                    box_size=6,  # Smaller for better embedding
                    border=1,
                )
                qr.add_data(website_link)
                qr.make(fit=True)
                
                # Create QR code image
                qr_image = qr.make_image(fill_color="black", back_color="white")
                
                # Convert to bytes for Excel
                img_buffer = io.BytesIO()
                qr_image.save(img_buffer, format='PNG')
                img_buffer.seek(0)
                
                # Create Excel image
                excel_img = ExcelImage(img_buffer)
                excel_img.width = 60   # Smaller size to prevent corruption
                excel_img.height = 60
                
                # Insert image in the QR code column, same row as the link
                cell_position = f'{qr_col_letter}{excel_row}'
                ws.add_image(excel_img, cell_position)
                
                successful_qrs += 1
                print(f"  âœ… Row {excel_row}: QR code added successfully")
                
            except Exception as e:
                print(f"  âŒ Row {excel_row}: Error creating QR code - {str(e)}")
                continue
        
        print("ğŸ’¾ Step 7: Saving file...")
        # Save with a new name to avoid corruption
        output_file = excel_file_path.replace('.xlsx', '_with_QR_codes.xlsx')
        
        # Make sure the output file is not open
        try:
            wb.save(output_file)
            print(f"âœ… SUCCESS! File saved as: {output_file}")
            print(f"ğŸ“Š Summary: {successful_qrs} QR codes successfully embedded")
            
            # Close the workbook
            wb.close()
            
            return True
            
        except PermissionError:
            print(f"âŒ Error: Cannot save file. Please make sure {output_file} is not open in Excel")
            return False
            
    except Exception as e:
        print(f"âŒ Unexpected error: {str(e)}")
        import traceback
        traceback.print_exc()
        return False

# Usage function with error handling
def run_qr_generator():
    """Interactive function to run the QR generator"""
    
    print("ğŸš€ QR Code Generator for Excel")
    print("=" * 40)
    
    # Get file path
    excel_file = input("ğŸ“‚ Enter your Excel file name (with .xlsx): ").strip()
    
    # Check if file exists
    if not os.path.exists(excel_file):
        print(f"âŒ File '{excel_file}' not found in current directory")
        print(f"ğŸ“ Current directory: {os.getcwd()}")
        print(f"ğŸ“‹ Files in current directory:")
        for file in os.listdir('.'):
            if file.endswith('.xlsx'):
                print(f"   - {file}")
        return
    
    # Get column name
    print("\nğŸ” Let me check your columns first...")
    try:
        df = pd.read_excel(excel_file)
        print("ğŸ“‹ Available columns:")
        for i, col in enumerate(df.columns):
            print(f"   {i+1}. {col}")
    except Exception as e:
        print(f"âŒ Error reading file: {e}")
        return
    
    link_column = input("\nğŸ”— Enter the exact name of your website link column: ").strip()
    
    # Run the generator
    success = embed_qr_codes_in_excel(excel_file, link_column)
    
    if success:
        print("\nğŸ‰ All done! You can now:")
        print("1. Open the new Excel file with QR codes")
        print("2. Use it in Publisher for mail merge")
        print("3. The QR codes are in the same rows as your links")
    else:
        print("\nğŸ˜ Something went wrong. Please check the error messages above.")

# Run the interactive version
if __name__ == "__main__":
    run_qr_generator()
