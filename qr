import pandas as pd
import qrcode
import os

def generate_qr_files_for_publisher(excel_file_path, link_column_name):
    """
    Generate QR codes as separate image files for Publisher mail merge
    """
    
    try:
        print("ðŸ” Step 1: Reading Excel file...")
        df = pd.read_excel(excel_file_path)
        print(f"âœ… Found {len(df)} rows of data")
        
        print("ðŸ” Step 2: Checking column name...")
        if link_column_name not in df.columns:
            print(f"âŒ Error: Column '{link_column_name}' not found!")
            print(f"ðŸ’¡ Available columns: {list(df.columns)}")
            return False
        
        print("ðŸ“ Step 3: Creating QR codes folder...")
        # Create folder for QR code images
        qr_folder = os.path.splitext(excel_file_path)[0] + "_QR_Images"
        os.makedirs(qr_folder, exist_ok=True)
        print(f"âœ… Folder created: {qr_folder}")
        
        print("âš¡ Step 4: Generating QR code files...")
        qr_paths = []
        successful_qrs = 0
        
        # Process each row
        for index, row in df.iterrows():
            row_number = index + 1
            website_link = row[link_column_name]
            
            # Skip empty/invalid links
            if pd.isna(website_link) or str(website_link).strip() == '':
                qr_paths.append('')
                print(f"  â­ï¸  Row {row_number}: Skipping (empty link)")
                continue
            
            try:
                website_link = str(website_link).strip()
                print(f"  ðŸ”„ Row {row_number}: Creating QR for {website_link[:50]}...")
                
                # Generate QR code
                qr = qrcode.QRCode(
                    version=1,
                    error_correction=qrcode.constants.ERROR_CORRECT_L,
                    box_size=10,  # Good size for printing
                    border=4,
                )
                qr.add_data(website_link)
                qr.make(fit=True)
                
                # Create QR code image
                qr_image = qr.make_image(fill_color="black", back_color="white")
                
                # Save as PNG file
                filename = f"QR_{row_number:03d}.png"  # QR_001.png, QR_002.png, etc.
                file_path = os.path.join(qr_folder, filename)
                qr_image.save(file_path)
                
                # Store the full file path for Excel
                qr_paths.append(file_path)
                successful_qrs += 1
                print(f"  âœ… Row {row_number}: Saved as {filename}")
                
            except Exception as e:
                qr_paths.append('')
                print(f"  âŒ Row {row_number}: Error - {str(e)}")
        
        print("ðŸ“ Step 5: Creating new Excel file with QR paths...")
        # Add QR code file paths to the dataframe
        df['QR_Code_Path'] = qr_paths
        
        # Save new Excel file
        output_file = excel_file_path.replace('.xlsx', '_for_Publisher.xlsx')
        df.to_excel(output_file, index=False)
        
        print(f"âœ… SUCCESS!")
        print(f"ðŸ“Š Summary: {successful_qrs} QR codes created")
        print(f"ðŸ“ QR images saved in: {qr_folder}")
        print(f"ðŸ“„ New Excel file: {output_file}")
        print(f"\nðŸŽ¯ For Publisher Mail Merge:")
        print(f"1. Use the file: {output_file}")
        print(f"2. The 'QR_Code_Path' column contains paths to QR images")
        print(f"3. In Publisher, insert Image from File and select the QR_Code_Path field")
        
        return True
        
    except Exception as e:
        print(f"âŒ Error: {str(e)}")
        return False

# Interactive function
def run_qr_file_generator():
    """Interactive function to run the QR file generator"""
    
    print("ðŸš€ QR Code File Generator for Publisher Mail Merge")
    print("=" * 50)
    
    # Get file path
    excel_file = input("ðŸ“‚ Enter your Excel file name (with .xlsx): ").strip()
    
    # Check if file exists
    if not os.path.exists(excel_file):
        print(f"âŒ File '{excel_file}' not found")
        print(f"ðŸ“ Current directory: {os.getcwd()}")
        return
    
    # Show available columns
    try:
        df = pd.read_excel(excel_file)
        print("\nðŸ“‹ Available columns:")
        for i, col in enumerate(df.columns):
            print(f"   {i+1}. {col}")
    except Exception as e:
        print(f"âŒ Error reading file: {e}")
        return
    
    # Get column name
    link_column = input("\nðŸ”— Enter the exact name of your website link column: ").strip()
    
    # Run the generator
    success = generate_qr_files_for_publisher(excel_file, link_column)
    
    if success:
        print("\nðŸŽ‰ Ready for Publisher!")
        print("\nðŸ“‹ Next steps:")
        print("1. Open Publisher and start mail merge")
        print("2. Use the new Excel file ending with '_for_Publisher.xlsx'")
        print("3. To insert QR codes:")
        print("   - Insert > Picture > From File")
        print("   - Select the 'QR_Code_Path' merge field")
        print("4. Publisher will automatically load each QR image!")

# Run the script
if __name__ == "__main__":
    run_qr_file_generator()
