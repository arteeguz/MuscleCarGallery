import pandas as pd
import qrcode
import os

def generate_qr_codes_for_publisher(excel_file_path, link_column_name):
    """
    Generate QR codes as image files for Publisher mail merge
    Creates Excel file with full paths that work with Publisher 365
    """
    
    try:
        print("ðŸ” Step 1: Reading Excel file...")
        df = pd.read_excel(excel_file_path)
        print(f"âœ… Found {len(df)} rows of data")
        
        print("ðŸ” Step 2: Checking column name...")
        if link_column_name not in df.columns:
            print(f"âŒ Error: Column '{link_column_name}' not found!")
            print(f"ðŸ’¡ Available columns: {list(df.columns)}")
            return False
        
        print("ðŸ“ Step 3: Creating QR codes folder...")
        qr_folder = "QR_Images"
        os.makedirs(qr_folder, exist_ok=True)
        print(f"âœ… Folder created: {qr_folder}")
        
        print("âš¡ Step 4: Generating QR code files...")
        qr_paths = []
        successful_qrs = 0
        
        # Process each row
        for index, row in df.iterrows():
            row_number = index + 1
            website_link = row[link_column_name]
            
            # Skip empty/invalid links
            if pd.isna(website_link) or str(website_link).strip() == '':
                qr_paths.append('')
                print(f"  â­ï¸  Row {row_number}: Skipping (empty link)")
                continue
            
            try:
                website_link = str(website_link).strip()
                print(f"  ðŸ”„ Row {row_number}: Creating QR for {website_link[:50]}...")
                
                # Generate QR code
                qr = qrcode.QRCode(
                    version=1,
                    error_correction=qrcode.constants.ERROR_CORRECT_L,
                    box_size=10,  # Good size for printing
                    border=4,
                )
                qr.add_data(website_link)
                qr.make(fit=True)
                
                # Create QR code image
                qr_image = qr.make_image(fill_color="black", back_color="white")
                
                # Save as PNG file
                filename = f"QR_{row_number:03d}.png"
                file_path = os.path.join(qr_folder, filename)
                qr_image.save(file_path)
                
                # Store full path (what works with Publisher)
                full_path = os.path.abspath(file_path)
                qr_paths.append(full_path)
                successful_qrs += 1
                print(f"  âœ… Row {row_number}: Saved as {filename}")
                
            except Exception as e:
                qr_paths.append('')
                print(f"  âŒ Row {row_number}: Error - {str(e)}")
        
        print("ðŸ“ Step 5: Creating Excel file for Publisher...")
        # Add QR code paths to dataframe
        df['QR_Code_Full_Path'] = qr_paths
        
        # Save Excel file
        output_file = excel_file_path.replace('.xlsx', '_for_Publisher.xlsx')
        df.to_excel(output_file, index=False)
        
        print(f"âœ… SUCCESS!")
        print(f"ðŸ“Š Summary: {successful_qrs} QR codes created")
        print(f"ðŸ“ QR images saved in: {qr_folder}")
        print(f"ðŸ“„ Excel file for Publisher: {output_file}")
        
        print(f"\nðŸŽ¯ Publisher Mail Merge Instructions:")
        print(f"=" * 50)
        print(f"1. Open Publisher and start mail merge with: {output_file}")
        print(f"2. Insert text fields normally (Insert > Merge Field)")
        print(f"3. For QR codes: Mailings > Picture")
        print(f"4. Select 'QR_Code_Full_Path' from the dropdown")
        print(f"5. Position and resize QR code as needed")
        print(f"6. Preview or complete the merge!")
        
        return True
        
    except Exception as e:
        print(f"âŒ Error: {str(e)}")
        return False

def run_qr_generator():
    """Simple interactive function to run the QR generator"""
    
    print("ðŸš€ QR Code Generator for Publisher Mail Merge")
    print("=" * 50)
    
    # Get file path
    excel_file = input("ðŸ“‚ Enter your Excel file name (with .xlsx): ").strip()
    
    # Check if file exists
    if not os.path.exists(excel_file):
        print(f"âŒ File '{excel_file}' not found in current directory")
        print(f"ðŸ“ Current directory: {os.getcwd()}")
        print("ðŸ“‹ Excel files in current directory:")
        for file in os.listdir('.'):
            if file.endswith('.xlsx'):
                print(f"   - {file}")
        return
    
    # Show available columns
    try:
        df = pd.read_excel(excel_file)
        print("\nðŸ“‹ Available columns in your Excel file:")
        for i, col in enumerate(df.columns, 1):
            print(f"   {i}. {col}")
    except Exception as e:
        print(f"âŒ Error reading file: {e}")
        return
    
    # Get column name
    link_column = input("\nðŸ”— Enter the exact name of your website link column: ").strip()
    
    # Run the generator
    print(f"\nðŸš€ Processing your file...")
    success = generate_qr_codes_for_publisher(excel_file, link_column)
    
    if success:
        print("\nðŸŽ‰ All done! You're ready for Publisher mail merge!")
        print("\nðŸ’¡ Remember: Use 'Mailings > Picture > QR_Code_Full_Path' in Publisher")
    else:
        print("\nðŸ˜ž Something went wrong. Please check the error messages above.")

# Run the script
if __name__ == "__main__":
    run_qr_generator()
